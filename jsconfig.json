{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@firebase/*": ["./src/firebase/*"],
      "@assets/*": ["./src/assets/*"],
      "@pages/*": ["./src/pages/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
